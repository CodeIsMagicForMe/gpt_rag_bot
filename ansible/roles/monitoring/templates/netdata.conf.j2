[global]
  run as user = netdata
  web files owner = netdata
  web files group = netdata
  http port listen backlog = 4096
  memory mode = save
  bind to = {{ netdata_prometheus_bind }}

[web]
  default port = {{ netdata_prometheus_port }}
  allow connections from = *
  mode = static-threaded

[prometheus:exporter]
  enabled = yes
  send charts matching = *
  hostname = ${host.hostname}
  update every = 2
  data source = average

[plugins]
  tc = no
  fping = yes
  go.d = yes
  python.d = yes
  statsd = yes

[statsd]
  enabled = yes
  default port = 8125
  update every = 1
  decimals = 2
